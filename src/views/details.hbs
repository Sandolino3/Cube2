
    <main>

      <h1>{{cube.name}}</h1>
            <img class="cube" src="{{cube.imageURL}}">
            <div class="details">
                <p><span>Description:</span>{{cube.description}}</p>
                <p><span>Difficulty level:</span> {{cube.difLevel}}</p>
          <a class="btn" href="/cube/{{cube._id}}/attach">Attach </a>
                <a class="btn" href="/">Back</a>
            </div>

                  <h2>Accessories</h2>
        {{#each cube.acsesories}}
         <div class="accessories">
                <div class="accessory">
                    <img src="{{imageUrl}}" alt="{{name}}">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
        {{else}}
           <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}
            </div>
    </main>

